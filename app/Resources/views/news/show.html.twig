{% extends 'layout.html.twig' %}

{% block title %}{{ post.getPageTitle() != null ? post.getPageTitle() : post.getTitle() }}{% endblock %}
{% block description %}{{ post.getPageDescription() }}{% endblock %}
{% block keyword %}{{ post.getPageKeyword() }}{% endblock %}

{% block body %}
    <div class="container">
        {# breadcrumbs #}
        {{ include('news/components/breadcrumbs.html.twig') }}
        
        <div class="row">
            <div class="col-md-8">
                <div class="news">
                    <h1 class="block-title">{{ post.getTitle() }}</h1>
                    
                    <div class="news-container">
                        {{ post.getContents()|raw }}
                    </div>

                    {# List tags #}
                    {{ include('news/components/tags.html.twig') }}

                    {# Social share #}
                    {{ include('news/components/share.html.twig') }}

                    {# Related news #}
                    {{ include('news/components/related.html.twig') }}
                    
                    {# List comments #}
                    {{ include('news/comments/list.html.twig') }}
                    
                    {# Render form comment #}
                    {{ include('news/comments/form.html.twig') }}
                </div>
            </div>

            {# Side bar #}
            {{ include('layout/sidebar.html.twig') }}
        </div>
    </div>
{% endblock %}