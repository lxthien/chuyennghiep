{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_news_index' %}

{% block main %}
    <h1>{{ 'title.news_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-list">
        <thead>
            <tr>
                <th scope="col">{{ 'label.name'|trans }}</th>
                <th scope="col">{{ 'label.category'|trans }}</th>
                <th scope="col">{{ 'label.images'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in news %}
            <tr>
                <td>{{ row.getTitle() }}</td>
                <td>{{ row.getCategory() }}</td>
                <td><img src="{{ vich_uploader_asset(row, 'imageFile') }}" alt="{{ row.getTitle() }}" style="width: 100px;" /></td>
                <td>{{ row.getCreatedAt() | localizeddate('medium', 'short', null, 'UTC') }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_news_edit', {id: row.id}) }}" class="btn btn-sm btn-primary mr-left">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        {{ include('admin/news/_delete_form.html.twig', {category: row}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'row.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_news_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
