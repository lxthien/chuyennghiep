{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_tag_index' %}

{% block main %}
    <h1>{{ 'title.comment_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-list">
        <thead>
            <tr>
                <th scope="col">{{ 'label.name'|trans }}</th>
                <th scope="col">{{ 'label.url'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in objects %}
            <tr>
                <td>{{ row.getName() }}</td>
                <td>{{ row.getUrl() }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_tag_edit', {id: row.id}) }}" class="btn btn-sm mr-left">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        {{ include('admin/tag/_delete_form.html.twig', {object: row}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'row.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
