{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_tag_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.tag_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.name'|trans }}</th>
                                        <th>{{ 'label.url'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                    <tr>
                                        <td>{{ row.getName() }}</td>
                                        <td>{{ row.getUrl() }}</td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_tag_edit', {id: row.id}) }}" class="btn-sm">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>

                                                {{ include('admin/tag/_delete_form.html.twig', {object: row}, with_context = false) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
