{% if relatedNews|length > 0 %}
<div class="related-news">
	<h4><span>{{ 'Related news'|trans }}</span></h4>
    <div class="row">
        {% for row in relatedNews %}
        <div class="col-md-4">
            <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getName() }}">
            	<img class="mr-3 img-thumbnail" src="{{ vich_uploader_asset(row, 'imageFile') | imagine_filter('news_thumb') }}" alt="{{row.getName()}}">
			</a>
            <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getName() }}">
            	{{ row.getName() }}
            </a>
        </div>
        {% endfor %}
    </div>
</div>
<div class="clearfix"></div>
{% endif %}