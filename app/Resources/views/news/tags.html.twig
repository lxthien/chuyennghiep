{% extends 'layout.html.twig' %}

{% block title %}
    {{tag.getPageTitle() ~ ' - Page ' ~ pagination.currentPageNumber ~ ' of ' ~ pagination.pageCount }}
{% endblock %}
{% block description %}
    {{tag.getPageDescription()}}
{% endblock %}
{% block keyword %}
    {{tag.getPageKeyword()}}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>{{ tag.getName() }}</h1>
                
                <div class="description">
                    <p>{{ tag.getContents()|raw }}</p>
                </div>

                {# Sort #}
                {{ include('news/components/sort.html.twig') }}

                {# List item on this page #}
                {% if pagination|length > 0  %}
                    <ul class="list-unstyled">
                        {% for row in pagination %}
                            {{ include('news/components/items.html.twig') }}
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="no-record">
                        <p>{{ 'Do not have item on this page'|trans }}</p>
                    </div>
                {% endif %}

                {# Pagination #}
                {{ include('news/components/pagination.html.twig') }}
            </div>
            
            {# Side bar #}
            {{ include('layout/sidebar.html.twig') }}
        </div>
    </div>
{% endblock %}