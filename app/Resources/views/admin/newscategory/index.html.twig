{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_index' %}

{% block main %}
    <h1>{{ 'title.newscategory_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-list">
        <thead>
            <tr>
                <th scope="col">{{ 'label.enable'|trans }}</th>
                <th scope="col">{{ 'label.name'|trans }}</th>
                <th scope="col">{{ 'label.parentcat'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
                <th scope="col"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in categories %}
            <tr>
                <td>
                    <label class="switch">
                        <input type="checkbox" {{ row.getEnable() ? 'checked' : '' }}>
                        <span class="slider round"></span>
                    </label>
                </td>
                <td><strong>{{ row.getName() }}</strong></td>
                <td>{{ row.getParentcat() ? row.getParentcat() : "root" }}</td>
                <td>{{ row.getCreatedAt() | localizeddate('medium', 'short', null, 'UTC') }}</td>
                <td class="text-center">
                    <div class="item-actions">
                        <a href="{{ path('admin_newscategory_edit', {id: row.id}) }}" class="btn btn-sm mr-left">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        {{ include('admin/newscategory/_delete_form.html.twig', {category: row}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'row.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_newscategory_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_newscategory'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
