{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_comment_index' %}

{% block main %}
    <h1>{{ 'title.comment_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-list">
        <thead>
            <tr>
                <th scope="col">{{ 'label.author'|trans }}</th>
                <th scope="col">{{ 'label.response.on.post'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in comment %}
            <tr>
                <td>{{ row.getAuthor().fullName }}</td>
                <td>{{ row.getPost() }}</td>
                <td>{{ row.publishedAt | localizeddate('medium', 'short', null, 'UTC') }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_comment_edit', {id: row.id}) }}" class="btn btn-sm btn-primary mr-left">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        {{ include('admin/comment/_delete_form.html.twig', {comment: row}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'row.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_comment_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.admin_new'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
