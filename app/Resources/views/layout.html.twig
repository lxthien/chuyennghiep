<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=1">

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">

        <title>{% block title %}{{ get_setting('pageTitle') }}{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ get_setting('pageDescription') }}{% endblock %}">
        <meta name="keywords" content="{% block keyword %}{{ get_setting('pageKeyword') }}{% endblock %}">
        
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="1 days">
        <meta http-equiv="content-language" content="vi">
        {% if app.request.attributes.get('_route') is not null %}
        <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
        {% endif %}
        
        <!-- Open Graph data -->
        {% if app.request.attributes.get('_route') is not null %}
        <meta property="og:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
        {% endif %}
        <meta property="og:type" content="article" />
        <meta property="og:title" content="{{ block('title') }}" />
        <meta property="og:description" content="{{ block('description') }}" />
        <meta property="fb:app_id" content="1384538691837107" />
        {% block ogImage %}
        {% endblock %}

        <!-- Twitter Card data -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@suanhaminhduy">
        <meta name="twitter:title" content="{{ block('title') }}">
        <meta name="twitter:description" content="{{ block('description') }}">
        <meta name="twitter:creator" content="@suanhaminhduy">
        {% block twitterImage %}
        {% endblock %}

        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "url": "http://suanhaminhduy.com/",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "http://suanhaminhduy.com/search?q={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }
        </script>

        <!-- Global site tag (gtag.js) - Google Analytics -->
        {{ get_setting('googleAnalytic')|raw }}

        <!-- Custom css -->
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            {{ include('layout/marquee.html.twig') }}
            {{ include('layout/header.html.twig') }}
            {{ include('layout/menu.html.twig') }}

            {% if showSlide is defined %}
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                        <li data-target="#myCarousel" data-slide-to="3" class=""></li>
                        <li data-target="#myCarousel" data-slide-to="4" class=""></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <a href="https://suanhaminhduy.com/thi-cong-xay-dung-quan-tra-sua-ten-ren-s-175-le-van-viet.html">
                                <img src="{{ asset('assets/images/banner/banner-2.jpg') }}" alt="Tenren 175 Lê Văn Việt">
                            </a>
                            <div class="container">
                                <div class="carousel-caption text-left">
                                    <h3>Tenren 175 Lê Văn Việt</h3>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <a href="https://suanhaminhduy.com/thi-cong-quan-cafe-the-coffee-house-490-nguyen-thi-thap.html">
                                <img src="{{ asset('assets/images/banner/banner-cafe-the-coffee-house-ntt.jpg') }}" alt="The Coffee House Nguyễn Thị Thập">
                            </a>
                            <div class="container">
                                <div class="carousel-caption text-left">
                                    <h3>The Coffee House 490 Nguyễn Thị Thập</h3>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <a href="https://suanhaminhduy.com/xay-nha-pho-4-tang-anh-huu-quan-12.html">
                                <img src="{{ asset('assets/images/banner/banner-xay-nha-pho-3-tang-thay-hanh.jpg') }}" alt="Xây nhà phố 3 tầng, Thầy Hạnh">
                            </a>
                            <div class="container">
                                <div class="carousel-caption text-left">
                                    <h3>Xây nhà phố 3 tầng, Thầy Hạnh</h3>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <img src="{{ asset('assets/images/banner/banner-01.png') }}" alt="Thiết kế thi công nội thất">
                            <div class="container">
                                <div class="carousel-caption text-left">
                                    <h3>Thiết kế thi công nội thất</h3>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <a href="https://suanhaminhduy.com/du-an-sua-chua-trung-tam-anh-ngu-english-town-tran-quoc-thao-sai-gon.html">
                                <img src="{{ asset('assets/images/banner/banner.jpg') }}" alt="English Town">
                            </a>
                            <div class="container">
                                <div class="carousel-caption text-left">
                                    <h3>English Town</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="container wrapper">
            <div class="row td-wrapper">
                {% block body %}{% endblock %}
            </div>
        </div>

        {{ include('layout/footer.html.twig') }}
        {{ include('layout/footer_UI.html.twig') }}

        {{ get_setting('facebookMessenger')|raw }}
    </body>
</html>
