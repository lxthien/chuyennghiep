{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_news_index' %}

{% block main %}
    <h1>{{ 'title.news_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-list">
        <thead>
            <tr>
                <th scope="col">{{ 'lable.news.title'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in pages %}
            <tr>
                <td><a href="{{ path('admin_page_edit', {id: row.id}) }}"><strong>{{ row.getTitle() }}</strong></a></td>
                <td></td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_page_edit', {id: row.id}) }}" class="btn btn-sm mr-left">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        {{ include('admin/page/_delete_form.html.twig', {news: row}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" align="center">{{ 'row.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_news_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
