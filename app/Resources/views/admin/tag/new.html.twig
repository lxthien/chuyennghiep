{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_comment_new' %}

{% block body_class 'admin_new' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.tag_new'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <div id="pay-invoice">
                                <div class="card-body">
                                    {{ form_start(form) }}
                                        {{ form_row(form.name) }}
                                        {{ form_row(form.url) }}
                                        {{ form_row(form.contents) }}

                                        <div class="card-title">
                                            <h3 class="text-center">SEO</h3>
                                        </div>
                                        <hr>
                                        {{ form_row(form.pageTitle) }}
                                        {{ form_row(form.pageDescription) }}
                                        {{ form_row(form.pageKeyword) }}

                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_tag'|trans }}
                                        </button>

                                        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
                                        
                                        <a href="{{ path('admin_tag_index') }}" class="btn btn-link">
                                            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                                        </a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- .card -->
                </div>
                <!--/.col-->
            </div>
        </div>
        <!-- .animated -->
    </div>
    <!-- .content -->

    <h1>{{ 'title.comment_new'|trans }}</h1>

    {{ form_start(form) }}
        
        {{ form_row(form.content) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_news'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_news_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
