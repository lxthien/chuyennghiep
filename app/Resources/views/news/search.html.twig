{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>Kết quả tìm kiếm cho từ khoá: "{{ q }}"</h1>

                {% if pagination|length > 0  %}
                    <ul class="list-unstyled">
                        {% for row in pagination %}
                            {{ include('news/components/items.html.twig') }}
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="no-record">
                        <p>{{ 'Do not have item on this page'|trans }}</p>
                    </div>
                {% endif %}

                {# Pagination #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>

            {# Side bar #}
            {{ include('layout/sidebar.html.twig') }}
        </div>
    </div>
{% endblock %}