{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_comment_new' %}

{% block body_class 'admin_new' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.comment_new'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <div id="pay-invoice">
                                <div class="card-body">
                                    {{ form_start(form) }}
                                        {{ form_row(form.content) }}
                                        {{ form_row(form.recaptcha) }}

                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_news'|trans }}
                                        </button>

                                        <a href="{{ path('admin_comment_index') }}" class="btn btn-link">
                                            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                                        </a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
