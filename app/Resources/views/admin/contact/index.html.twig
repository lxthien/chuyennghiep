{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_comment_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.comment_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.author'|trans }}</th>
                                        <th>{{ 'label.response.on.post'|trans }}</th>
                                        <th>{{ 'label.published_at'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                        <tr>
                                            <td>{{ row.getAuthor() }}</td>
                                            <td><a href="{{ path('admin_news_edit', {id: 1}) }}">{{ row.getNews() }}<a></td>
                                            <td>{{ row.getCreatedAt() | localizeddate('medium', 'short', null, 'UTC') }}</td>
                                            <td>
                                                <div class="item-actions">
                                                    <a href="{{ path('admin_comment_edit', {id: row.id}) }}" class="btn-sm">
                                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                                    </a>
                                                    <a href="{{ path('admin_comment_reply', {id: row.id}) }}" class="btn-sm">
                                                        <i class="fa fa-reply" aria-hidden="true"></i>
                                                    </a>

                                                    {{ include('admin/contact/_delete_form.html.twig', {comment: row}, with_context = false) }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
