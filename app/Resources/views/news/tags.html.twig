{% extends 'layout.html.twig' %}

{% block title %}
    {{tag.getPageTitle() ~ ' - Page ' ~ pagination.currentPageNumber ~ ' of ' ~ pagination.pageCount }}
{% endblock %}
{% block description %}
    {{tag.getPageDescription()}}
{% endblock %}
{% block keyword %}
    {{tag.getPageKeyword()}}
{% endblock %}

{% block body %}
	<div class="container">
        {# Breadcrum #}
        {{ wo_render_breadcrumbs() }}
        
        <div class="row">
            <div class="col-md-9">
                <h1>{{ tag.getName() }}</h1>
                <div class="clearfix"></div>
                <div class="description">
                    <p>{{ tag.getContents()|raw }}</p>
                </div>
                <div class="clearfix"></div>
                <div class="sort float-right">
                	<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{'Sort'|trans}}
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							{{ knp_pagination_sortable(pagination, 'Sort by ID'|trans, 'id') }}
						    {{ knp_pagination_sortable(pagination, 'Sort by Name'|trans, 'name') }}
						    {{ knp_pagination_sortable(pagination, 'Sort by Date'|trans, 'createdAt') }}
						</div>
					</div>
				</div>
				<div class="clearfix"></div>
                <ul class="list-unstyled">
                	{% for row in pagination %}
                    <li class="media">
                        <img class="mr-3 img-thumbnail" src="{{ vich_uploader_asset(row, 'imageFile') }}" alt="{{row.getName()}}" width="200">
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">
                            	<a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{row.getName()}}">{{row.getName()}}</a>
                            </h5>
                            {{row.getDescription()}}
                        </div>
                    </li>
                    {% endfor %}
                </ul>
                <div class="navigation">
				    {{ knp_pagination_render(pagination) }}
				</div>
            </div>
            
            {# Side bar #}
            {{ include('layout/sidebar.html.twig') }}
        </div>
    </div>
{% endblock %}