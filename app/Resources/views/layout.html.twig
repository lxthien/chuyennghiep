<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">

        <title>{% block title %}{{ get_setting('pageTitle') }}{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ get_setting('pageDescription') }}{% endblock %}">
        <meta name="keywords" content="{% block keyword %}{{ get_setting('pageKeyword') }}{% endblock %}">
        
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="1 days">
        <meta http-equiv="content-language" content="vi">
        {% if status_code != 404 %}
        <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
        {% endif %}
        
        <!-- Open Graph data -->
        {% if status_code != 404 %}
        <meta property="og:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
        {% endif %}
        <meta property="og:type" content="article" />
        <meta property="og:title" content="{{ block('title') }}" />
        <meta property="og:description" content="{{ block('description') }}" />
        {% block ogImage %}{% endblock %}

        <!-- Twitter Card data -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@suanhaminhduy">
        <meta name="twitter:title" content="{{ block('title') }}">
        <meta name="twitter:description" content="{{ block('description') }}">
        <meta name="twitter:creator" content="@suanhaminhduy">
        {% block twitterImage %}{% endblock %}

        <!-- Global site tag (gtag.js) - Google Analytics -->
        {{ get_setting('googleAnalytic')|raw }}

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <!-- Custom css -->
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container wrapper">
            <div class="row marquee">
                <div class="col-md-12">
                    <marquee scrollamount="6">{{ get_setting('marqueeHomepage')|raw }}</marquee>
                </div>
            </div>
            {{ include('layout/header.html.twig') }}
            {{ include('layout/menu.html.twig') }}
            
            <div class="row td-wrapper">
                {% block body %}{% endblock %}
            </div>
            
            {{ include('layout/footer.html.twig') }}
        </div>
        
        {{ include('layout/footer_UI.html.twig') }}
    </body>
</html>
