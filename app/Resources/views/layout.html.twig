<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}{{ get_setting('pageTitle') }}{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ get_setting('pageDescription') }}{% endblock %}">
        <meta name="keywords" content="{% block keyword %}{{ get_setting('pageKeyword') }}{% endblock %}">
        
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="1 days">
        <meta http-equiv="content-language" content="vi">
        
        <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>

        <!-- Global site tag (gtag.js) - Google Analytics -->
        {{ get_setting('googleAnalytic')|raw }}

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

        <!-- Custom css -->
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container wrapper">
            {{ include('layout/header.html.twig') }}
            {{ include('layout/menu.html.twig') }}
            
            <div class="row td-wrapper">
                {% block body %}{% endblock %}
            </div>
            
            {{ include('layout/footer.html.twig') }}
        </div>
        
        {{ include('layout/footer_UI.html.twig') }}
    </body>
</html>
