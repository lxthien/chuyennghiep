{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.newscategory_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.name'|trans }}</th>
                                        <th>{{ 'label.parentcat'|trans }}</th>
                                        <th><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
                                        <th><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in categories %}
                                    <tr>
                                        <td><a href="{{ path('admin_newscategory_edit', {id: row.id}) }}"><strong>{{ row.getName() }}</strong><a></td>
                                        <td>{{ row.getParentcat() }}</td>
                                        <td>{{ row.getCreatedAt() | localizeddate('medium', 'none', null, 'Asia/Ho_Chi_Minh', 'dd/mm/YY') }}</td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_newscategory_edit', {id: row.id}) }}" class="btn btn-sm mr-left">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                                {# {{ include('admin/newscategory/_delete_form.html.twig', {category: row}, with_context = false) }} #}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
    <!-- .content -->
{% endblock %}
