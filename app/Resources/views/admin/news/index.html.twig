{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_news_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <a class="btn btn-primary" href="#" role="button">Link</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.news_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.images'|trans }}</th>
                                        <th>{{ 'lable.news.title'|trans }}</th>
                                        <th>{{ 'label.category'|trans }}</th>
                                        <th>{{ 'label.published_at'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in news %}
                                    <tr>
                                        <td>
                                            <div class="images-container">
                                                <img src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('admin_news_thumb') }}" alt="{{ row.getTitle() }}" />
                                            </div>
                                        </td>
                                        <td><strong>{{ row.getTitle() }}</strong></td>
                                        <td>{{ row.getCategory() }}</td>
                                        <td>{{ row.getCreatedAt() | localizeddate('medium', 'none', null, 'Asia/Ho_Chi_Minh', 'd/M/YYYY') }}</td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_news_edit', {id: row.id}) }}" class="btn-sm">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                                
                                                {{ include('admin/news/_delete_form.html.twig', {news: row}, with_context = false) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
