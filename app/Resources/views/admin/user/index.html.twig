{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin-user-index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-3">
                    <div class="card add">
                        <div class="card-body">
                            <div class="stat-widget-one">
                                <a href="{{ path('admin_user_index') }}">
                                    <div class="stat-icon dib">
                                        <i class="ti-plus text-success border-success"></i>
                                    </div>
                                    <div class="stat-content dib">
                                        <div class="stat-text text-success">{{ 'menu.add_new'|trans }}</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.users_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.username'|trans }}</th>
                                        <th>{{ 'label.name'|trans }}</th>
                                        <th>{{ 'label.email'|trans }}</th>
                                        <th>{{ 'label.role'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                    <tr>
                                        <td><strong><a href="{{ path('admin_user_edit', {id: row.id}) }}">{{ row.getUsername() }}</a></strong></td>
                                        <td>{{ row.getName() }}</td>
                                        <td>{{ row.getEmail() }}</td>
                                        <td>
                                            {% for role in row.getRoles() %}
                                            {{ role }}, 
                                            {% endfor %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
